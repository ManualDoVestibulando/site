{% macro create_a_for(name) -%}
    <a href="#" class="nav-link px-2 fs-5 mx-md-3
        {{- ' link-primary' if name == active_link else ' link-dark' -}}
    ">{{ name|capitalize }}</a>
{%- endmacro %}

{% macro main_heading(text) %}
    <h1 class="display-1 text-center">{{- text -}}</h1>
{% endmacro %}

{#
Depends on the variables

active_link:
    Name of the active link in the navbar
root_path:
    Relative path to the root of the repository
#}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="{{- root_path -}}img/favicon.png" type="image/x-icon">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="{{- root_path -}}style.css">

    <title>{% block title required %}{% endblock %}</title>

</head>
<body>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

    <header class="d-flex flex-wrap align-items-center py-2 mb-4 bg-light justify-content-between">
        <a href="#" class="d-flex align-items-center col-md-3 mb-2 mx-3 mb-md-1 text-dark text-decoration-none">
            <img src="{{- root_path -}}img/logo.png" alt="Logo do Manual do Vestibulando" class="img-fluid">
        </a>
        <ul class="nav col-12 col-md-auto mb-2 mb-md-0 justify-content-center align-items-center">
            <li>{{ create_a_for('Home',      )    }}</li>
            <li>{{ create_a_for('Notas',     )    }}</li>
            <li>{{ create_a_for('Redações',  )    }}</li>
            <li>{{ create_a_for('Depoimentos')    }}</li>
        </ul>
    </header>

    <div class="p-3 container-fluid">
        {% block content required %}{% endblock %}
    </div>

</body>
</html>
